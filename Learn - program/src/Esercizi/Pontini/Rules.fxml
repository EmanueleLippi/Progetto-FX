<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e6f0ff;" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Esercizi.Pontini.RulesController">
    <children>
        <VBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="340.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20px;">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Regole dell'esercizio Ordina Codice" />
                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <Text text="- l'utente visualizza due codici java." wrappingWidth="500.0" />
